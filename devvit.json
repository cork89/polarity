{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "polaritypenguin",
  "post": {
    "dir": "dist",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "splash.html"
      },
      "play": {
        "entry": "play.html"
      },
      "editor": {
        "entry": "editor.html"
      },
      "lore": {
        "entry": "lore.html"
      }
    }
  },
  "media": {
    "dir": "assets"
  },
  "server": {
    "dir": "dist",
    "entry": "server.cjs"
  },
  "permissions": {
    "reddit": {
      "enable": true,
      "asUser": [
        "SUBMIT_POST",
        "SUBMIT_COMMENT",
        "SUBSCRIBE_TO_SUBREDDIT"
      ]
    }
  },
  "triggers": {
    "onAppInstall": "/internal/triggers/on-app-install"
  },
  "dev": {
    "subreddit": "polaritypenguin_dev"
  }
}